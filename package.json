{
  "name": "open-opl-toolbox",
  "version": "0.1.0-alpha.0",
  "description": "A modern, cross-platform way to manage your OPL game collection. ",
  "main": "dist/main.js",
  "author": "Luden02",
  "email": "github.com.overtime522@passmail.com",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "tsc",
    "build:watch": "tsc -w",
    "app:serve": "npm-run-all -p angular:serve build:watch electron:serve",
    "angular:serve": "cd angular && ng serve",
    "electron:serve": "electron ./dist/main.js --serve",
    "start": "npm run build && electron ./dist/main.js",
    "package:win": "npm run remove && cd angular && npm run build && cd .. && npm run build && electron-builder --win",
    "package:mac": "npm run remove && cd angular && npm run build && cd .. && npm run build && electron-builder --mac",
    "package:linux": "npm run remove && cd angular && npm run build && cd .. && npm run build && electron-builder --linux",
    "remove": "rimraf -rf ./dist && rimraf -rf ./build",
    "electron": "electron"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "electron-reloader": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  },
  "build": {
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "assets/images/icon.ico",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/images/icon.icns",
      "target": [
        "dmg"
      ],
      "hardenedRuntime": true
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/images/linux-icon.png",
      "maintainer": "Luden02 <github.com.overtime522@passmail.com>",
      "vendor": "Luden02"
    }
  }
}
