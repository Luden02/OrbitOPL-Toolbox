{
  "name": "open-opl-toolbox",
  "version": "0.2.0-alpha.0",
  "description": "A modern, cross-platform way to manage your OPL game collection. ",
  "main": "dist/src/main.js",
  "author": "Luden02",
  "email": "github.com.overtime522@passmail.com",
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "build": "tsc",
    "build:watch": "tsc -w",
    "app:serve": "concurrently \"npm run angular:serve\" \"npm run build:watch\" \"wait-on http://localhost:4200 && npm run electron:serve\"",
    "angular:serve": "cd angular && ng serve",
    "electron:serve": "electron ./dist/src/main.js --serve",
    "start": "npm run build && electron ./dist/src/main.js",
    "package:win": "npm run remove && cd angular && npm run build && cd .. && npm run build && electron-builder --win",
    "package:mac": "npm run remove && cd angular && npm run build && cd .. && npm run build && electron-builder --mac",
    "package:linux": "npm run remove && cd angular && npm run build && cd .. && npm run build && electron-builder --linux",
    "remove": "rimraf -rf ./dist && rimraf -rf ./build",
    "electron": "electron"
  },
  "devDependencies": {
    "7zip-bin": "^5.2.0",
    "concurrently": "^9.2.0",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "electron-reloader": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  },
  "build": {
    "productName": "OpenOPLToolbox",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "build"
    },
    "win": {
      "icon": "assets/applogo/icon_256x256.png",
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "assets/applogo/icon_512x512.png",
      "target": [
        {
          "target": "dmg"
        }
      ],
      "hardenedRuntime": true
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "assets/applogo/icon_512x512.png",
      "maintainer": "Luden02 <github.com.overtime522@passmail.com>",
      "vendor": "Luden02"
    }
  }
}
